<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:myApp="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewModel"
            type="cn.edu.sustc.androidclient.ui.main.TaskViewModel"/>
    </data>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.task.TaskDetailActivity"
        android:orientation="vertical"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="177dp"
            android:background="@android:color/darker_gray"
            myApp:imageUrl="@{viewModel.coverUrl}" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="68dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewModel.title}"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="12dp"
                android:text="@string/collection_task" />

            <TextView
                android:layout_width="69dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="22dp"
                android:text="可赚取：10积分/份" />

        </RelativeLayout>
        <TextView
            android:id="@+id/task_markdown_descriptions"
            android:layout_width="match_parent"
            android:layout_height="227dp" />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/get_task"
            android:textSize="15sp"
            android:textColor="#fff"
            android:background="@color/colorPrimary"
            />


    </LinearLayout>
</layout>
